#!/bin/bash

set -Eeo pipefail

for command in "$@"
do
  echo "--- ${command} ---"
  case "${command}" in
    _build)
        rm -rf build/
        gradle assemble
        ;;
    build)
        dojo "./tasks _build"
        ;;
    _test_unit)
        gradle test
        ;;
    test_unit)
        dojo "./tasks _test_unit"
        ;;
    _test_integration)
        gradle --info integrationTest
        ;;
    test_integration)
        dojo "./tasks _test_integration"
        ;;
    _dep)
        gradle dependencyCheckAnalyze
        ;;
    dep)
        dojo "./tasks _dep"
        ;;
    _test_coverage)
        gradle jacocoTestCoverageVerification
        ;;
    test_coverage)
        dojo "./tasks _test_coverage"
        ;;
    _code_quality)
        gradle check -x test
        ;;
    code_quality)
        dojo "./tasks _code_quality"
        ;;
    run_local)
        ./gradlew bootRun
        ;;
    publish_docker)
      if [ -z $IMAGE_TAG ]; then
          echo "Please set IMAGE_TAG environment variable"
          exit 1
      fi
      ecr_login=$(dojo "./scripts/ecr-helper get-login")
      ecr_repo_uri=$(dojo "./scripts/ecr-helper get-repo-uri")
      docker build -t ${ecr_repo_uri}:latest -t ${ecr_repo_uri}:${IMAGE_TAG} .
      eval $ecr_login
      docker push ${ecr_repo_uri}:${IMAGE_TAG}
      ;;
    *)
        echo "Invalid command: '${command}'"
        exit 1
        ;;
  esac
done

set +e